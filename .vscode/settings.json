{
	"WillLuke.nextjs.addTypesOnSave": true,
	"WillLuke.nextjs.hasPrompted": true,
	"[scss]": {
		"editor.colorDecorators": true,
		"editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
		"editor.foldingStrategy": "indentation"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
	},
	"css.validate": false,
	"editor.codeActionsOnSave": {
		"source.fixAll": "explicit",
		"source.fixAll.eslint": "explicit"
	},
	"editor.cursorBlinking": "smooth",
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.cursorStyle": "line",
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.definitionLinkOpensInPeek": true,
	"editor.foldingImportsByDefault": true,
	"editor.fontFamily": "'Fira Code', 'Fira Code Retina', 'Fira Code Light', 'Courier New', monospace",
	"editor.fontLigatures": true,
	"editor.fontSize": 15,
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,
	"editor.formatOnSaveMode": "modificationsIfAvailable",
	"editor.formatOnType": false,
	"editor.lineHeight": 32,
	"editor.quickSuggestions": {
		"strings": true
	},
	"editor.renderWhitespace": "trailing",
	"editor.screenReaderAnnounceInlineSuggestion": true,
	"editor.suggest.localityBonus": true,
	"editor.suggest.preview": true,
	"editor.suggest.shareSuggestSelections": true,
	"editor.wordWrap": "wordWrapColumn",
	"eslint.validate": ["javascript", "typescript", "typescriptreact"],
	"files.associations": {
		"*.css": "tailwindcss",
		"*.module.scss": "tailwindcss",
		"*.ts": "typescriptreact"
	},
	"files.autoGuessEncoding": true,
	"files.autoSave": "off",
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"less.validate": false,
	"scss.validate": false,

	"tailwindCSS.includeLanguages": {
		"plaintext": "html"
	},
	"stylelint.validate": ["css", "scss", ".module.scss"],
	"typescript.enablePromptUseWorkspaceTsdk": true,
	"typescript.tsdk": "node_modules/typescript/lib",
	"typescript.tsserver.pluginPaths": ["typescript-plugin-css-modules"],

	"workbench.colorTheme": "Monokai"
}
