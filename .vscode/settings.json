{
	"[scss]": {
		"editor.colorDecorators": true,
		"editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
		"editor.foldingStrategy": "indentation"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
	},
	"css.validate": false,
	"editor.codeActionsOnSave": {
		"source.fixAll": "explicit",
		"source.fixAll.eslint": "explicit"
	},
	"editor.cursorBlinking": "smooth",
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.cursorStyle": "line",
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.definitionLinkOpensInPeek": true,
	"editor.foldingImportsByDefault": true,
	"editor.fontFamily": "'Fira Code', 'Fira Code Retina', 'Fira Code Light', 'Courier New', monospace",
	// "editor.fontFamily": "\"Fira Code\", Consolas, Hack, monospace",
	"editor.fontLigatures": true,
	"editor.fontSize": 15,
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,
	"editor.formatOnSaveMode": "modificationsIfAvailable", // required to format on save
	"editor.formatOnType": false,
	"editor.lineHeight": 32,
	"editor.quickSuggestions": {
		"strings": true
	},
	"editor.renderWhitespace": "trailing",
	"editor.screenReaderAnnounceInlineSuggestion": true,
	"editor.suggest.localityBonus": true,
	"editor.suggest.preview": true,
	"editor.suggest.shareSuggestSelections": true,
	"editor.wordWrap": "wordWrapColumn",
	"eslint.validate": ["javascript", "typescript", "typescriptreact"],
	"files.associations": {
		"*.css": "tailwindcss",
		"*.module.scss": "tailwindcss",
		"*.ts": "typescriptreact"
	},
	"files.autoGuessEncoding": true,
	"files.autoSave": "off", // optional but recommended
	"files.insertFinalNewline": true,
	"files.simpleDialog.enable": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"less.validate": false,
	"scss.validate": false,

	// "tailwindCSS.experimental.configFile": "../tailwind.config.js",

	"tailwindCSS.includeLanguages": {
		"plaintext": "html"
	},
	// "stylelint.validate": ["css", "scss", ".module.scss"],
	"typescript.enablePromptUseWorkspaceTsdk": true,
	"typescript.tsdk": "node_modules/typescript/lib",
	"typescript.tsserver.pluginPaths": ["typescript-plugin-css-modules"],
	"window.titleBarStyle": "custom",
	"workbench.colorCustomizations": {
		"statusBar.background": "#000000",
		"statusBar.debuggingBackground": "#ff7800",
		"statusBar.foreground": "#ebe8e8",
		"statusBar.noFolderBackground": "#EB4817",
		"statussBar.prominentBackground": "#ca4545",
		"titleBar.activeBackground": "#232323",
		"titleBar.activeForeground": "#ebe8e8",
		"titleBar.border": "#EB4817",
		"titleBar.inactiveBackground": "#000000"
	},
	"workbench.colorTheme": "Monokai"
}
